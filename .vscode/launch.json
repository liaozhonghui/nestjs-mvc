    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "name": "Nestjs Local",
            "program": "npm",
            "request": "launch",
            "runtimeExecutable": "npm",
            "windows": {
                "runtimeExecutable": "npm.cmd"
            },
            "runtimeArgs": [
                "run",
                "start:dev"
            ],
            "env": {
                "NODE_ENV": "local"
            },
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceRoot}",
            "stopOnEntry": false,
            "console": "integratedTerminal",
            "restart": true,
        },
        {
            "type": "node",
            "name": "Nestjs Start",
            "program": "npm",
            "request": "launch",
            "runtimeExecutable": "npm",
            "windows": {
                "runtimeExecutable": "npm.cmd"
            },
            "runtimeArgs": [
                "run",
                "start"
            ],
            "env": {
                "NODE_ENV": "local"
            },
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceRoot}",
            "stopOnEntry": false,
            "console": "integratedTerminal",
            "restart": true,
        },
    ]
}